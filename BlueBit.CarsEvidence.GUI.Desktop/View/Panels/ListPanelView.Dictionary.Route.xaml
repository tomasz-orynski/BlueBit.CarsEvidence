<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:i="http://schemas.microsoft.com/expression/2010/interactivity"
    xmlns:mvvm="http://www.galasoft.ch/mvvmlight"
    xmlns:_bbcePanels="clr-namespace:BlueBit.CarsEvidence.GUI.Desktop.ViewModel.Panels"
    xmlns:_bbceInteractions="clr-namespace:BlueBit.CarsEvidence.GUI.Desktop.ViewModel.Interactions"
    xmlns:_bbceBevaviors="clr-namespace:BlueBit.CarsEvidence.GUI.Desktop.ViewModel.Interactions.Behaviors"
>
    <DataTemplate DataType="{x:Type _bbcePanels:RoutesListPanelViewModel}">
        <ListView ItemsSource="{Binding Items}">
            <i:Interaction.Triggers>
                <i:EventTrigger EventName="Loaded">
                    <mvvm:EventToCommand Command="{Binding Path=EventCmdSelectectionChanged}" PassEventArgsToCommand="True" />
                </i:EventTrigger>
                <i:EventTrigger EventName="SelectionChanged">
                    <mvvm:EventToCommand Command="{Binding Path=EventCmdSelectectionChanged}" PassEventArgsToCommand="True" />
                </i:EventTrigger>
                <i:EventTrigger EventName="MouseDoubleClick">
                    <mvvm:EventToCommand Command="{Binding Path=EventCmdMouseDoubleClick}" PassEventArgsToCommand="True" />
                </i:EventTrigger>
            </i:Interaction.Triggers>
            <i:Interaction.Behaviors>
                <_bbceBevaviors:SortDefaultBehavior PropertyNames="Code" />
                <_bbceBevaviors:SortColumnsBehavior />
            </i:Interaction.Behaviors>
            <ListView.InputBindings>
                <KeyBinding Key="Insert" Command="{Binding Path=EventCmdKeyInsertPressed}" />
                <KeyBinding Key="Delete" Command="{Binding Path=EventCmdKeyDeletePressed}" />
                <KeyBinding Key="Enter" Command="{Binding Path=EventCmdKeyEnterPressed}" />
                <MouseBinding Gesture="LeftDoubleClick" Command="{Binding Path=EventCmdMouseDoubleClick}" />
            </ListView.InputBindings>
            <ListView.View>
                <GridView>
                    <GridViewColumn>
                        <GridViewColumn.Header>
                            <CheckBox IsChecked="{Binding Path=EventCmdSelectectionChanged.SelectedState}" />
                        </GridViewColumn.Header>
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <CheckBox 
                                    Tag="{Binding ID}" 
                                    IsChecked="{Binding RelativeSource={RelativeSource AncestorType={x:Type ListViewItem}}, Path=IsSelected}" 
                                    HorizontalAlignment="Center"/>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>

                    <GridViewColumn DisplayMemberBinding="{Binding Code}">
                        <i:Interaction.Behaviors>
                            <_bbceBevaviors:SortColumnBehavior PropertyName="Code" />
                        </i:Interaction.Behaviors>
                        <GridViewColumn.Header>
                            <TextBlock Text="{StaticResource strObjectProp_Code}" ToolTip="{StaticResource strObjectProp_Code}" />
                        </GridViewColumn.Header>
                    </GridViewColumn>

                    <GridViewColumn DisplayMemberBinding="{Binding AddressFrom.Description}">
                        <i:Interaction.Behaviors>
                            <_bbceBevaviors:SortColumnBehavior PropertyName="AddressFrom.Description" />
                        </i:Interaction.Behaviors>
                        <GridViewColumn.Header>
                            <TextBlock Text="{StaticResource strObjectProp_AddressFrom_}" ToolTip="{StaticResource strObjectProp_AddressFrom}" />
                        </GridViewColumn.Header>
                    </GridViewColumn>

                    <GridViewColumn DisplayMemberBinding="{Binding AddressTo.Description}">
                        <i:Interaction.Behaviors>
                            <_bbceBevaviors:SortColumnBehavior PropertyName="AddressTo.Description" />
                        </i:Interaction.Behaviors>
                        <GridViewColumn.Header>
                            <TextBlock Text="{StaticResource strObjectProp_AddressTo_}" ToolTip="{StaticResource strObjectProp_AddressTo}" />
                        </GridViewColumn.Header>
                    </GridViewColumn>

                    <GridViewColumn>
                        <i:Interaction.Behaviors>
                            <_bbceBevaviors:SortColumnBehavior PropertyName="Distance" />
                        </i:Interaction.Behaviors>
                        <GridViewColumn.Header>
                            <TextBlock Text="{StaticResource strObjectProp_Distance_}" ToolTip="{StaticResource strObjectProp_Distance}" />
                        </GridViewColumn.Header>
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding Distance}" HorizontalAlignment="Right" />
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>

                    <GridViewColumn>
                        <i:Interaction.Behaviors>
                            <_bbceBevaviors:SortColumnBehavior PropertyName="DistanceIsInBothDirections" />
                        </i:Interaction.Behaviors>
                        <GridViewColumn.Header>
                            <TextBlock Text="{StaticResource strObjectProp_DistanceIsInBothDirections_}" ToolTip="{StaticResource strObjectProp_DistanceIsInBothDirections}" />
                        </GridViewColumn.Header>
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <CheckBox IsChecked="{Binding DistanceIsInBothDirections}" IsEnabled="False" VerticalAlignment="Center"/>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>
                </GridView>
            </ListView.View>
        </ListView>
    </DataTemplate>
</ResourceDictionary>